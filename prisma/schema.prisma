generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String          @id @unique @default(uuid())
  mobileNo           String
  firstName          String
  lastName           String
  email              String          @unique
  hashedPassword     String
  hashedRefreshToken String?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  circle             Circle[]
  circleMembers      CircleMembers[]
  devices            Devices[]
  location           Location[]
  places             Places[]

  @@map("users")
}

model Location {
  id        String @unique @default(uuid())
  latitude  Float
  longitude Float
  userId    String
  circleId  String
  circle    Circle @relation(fields: [circleId], references: [id])
  user      User   @relation(fields: [userId], references: [id])
}

model Places {
  id        String @unique @default(uuid())
  name      String
  latitude  Float
  longitude Float
  userId    String
  circleId  String
  circle    Circle @relation(fields: [circleId], references: [id])
  user      User   @relation(fields: [userId], references: [id])
}

model Circle {
  id            String          @unique @default(uuid())
  circleCode    String
  codeExpiresAt DateTime        @default(dbgenerated("now() + interval '3 days'"))
  title         String
  description   String?
  createdUserId String
  createdUser   User            @relation(fields: [createdUserId], references: [id])
  circleMembers CircleMembers[]
  location      Location[]
  places        Places[]
}

model CircleMembers {
  id       String  @unique @default(uuid())
  userId   String
  circleId String
  role     String?
  circle   Circle  @relation(fields: [circleId], references: [id])
  member   User    @relation(fields: [userId], references: [id])

  @@unique([userId, circleId], name: "userId_circleId")
}

model Devices {
  id             String @unique @default(uuid())
  userId         String
  device_type    String
  device_version String
  app_version    String
  user           User   @relation(fields: [userId], references: [id])
}
